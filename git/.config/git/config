[diff]
	context = 3
	renames = copies
	interHunkContext = 10

[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX

[diff-so-fancy]
	markEmptyLines = false

[color "diff"]
	meta = black bold
	frag = magenta
	context = white
	whitespace = yellow reverse
	old = red

[interactive]
	diffFilter = diff-so-fancy --patch
	singlekey = true


[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = green
	changed = yellow
	untracked = red
[format]
	pretty = format:%C(auto)%h %C(dim)%ad %C(reset)%s %C(blue)[%an]%C(reset)
